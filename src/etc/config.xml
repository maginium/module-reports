<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <!-- Configures default settings for reports -->
        <reports>
            <options>
                <!-- Enables various report options -->
                <enabled>1</enabled>
                <product_view_enabled>1</product_view_enabled>
                <product_send_enabled>1</product_send_enabled>
                <product_compare_enabled>1</product_compare_enabled>
                <product_to_cart_enabled>1</product_to_cart_enabled>
                <wishlist_share_enabled>1</wishlist_share_enabled>
                <product_to_wishlist_enabled>1</product_to_wishlist_enabled>
            </options>
        </reports>

        <!-- Configures general settings for Mirasvit reports -->
        <mst_reports>
            <general>
                <!-- Sets the order statuses for Mirasvit reports -->
                <order_status
                >canceled,canceled_by_customer,closed,complete,delivered,fraud,holded,ordered,packed,payment_review,pending,pending_payment,processing,ready_to_ship,shipped</order_status>
            </general>
        </mst_reports>
    </default>
</config>
